                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:id="@+id/shadowdemon"
                    android:src="@drawable/shadow_demon" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:id="@+id/shadowshaman"
                    android:src="@drawable/shadow_shaman" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:id="@+id/silencer"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:src="@drawable/silencer" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:id="@+id/skywrath"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:src="@drawable/skywrath_mage" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:id="@+id/stormspirit"
                    android:src="@drawable/storm_spirit" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:id="@+id/techies"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:src="@drawable/techies" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:id="@+id/tinker"
                    android:src="@drawable/tinker" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:id="@+id/visage"
                    android:src="@drawable/visage" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
