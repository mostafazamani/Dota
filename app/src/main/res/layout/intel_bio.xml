                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:id="@+id/necrophos"
                    android:src="@drawable/necrophos" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
