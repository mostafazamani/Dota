<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77121100"
    android:padding="5dp">

    <ImageView
        android:id="@+id/profile_hero"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/power_hero"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@id/profile_hero"
        android:layout_above="@id/btn_bastan"/>

    <TextView
        android:id="@+id/bio_name"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_margin="2dp"
        android:background="@drawable/shape_mahv"
        android:layout_toEndOf="@id/profile_hero"
        />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bio_name"
        android:layout_above="@id/btn_bastan"
        android:layout_marginTop="20dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/shape_mahv"
        android:layout_toRightOf="@id/power_hero">

        <TextView
            android:id="@+id/text_bio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"

            />
    </ScrollView>

    <Button
        android:id="@+id/btn_bastan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="بستن"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>