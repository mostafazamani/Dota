                <ImageView
                    android:id="@+id/underlord"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mahv"
                    android:padding="1dp"
                    android:src="@drawable/underlord" />

                <ImageView
                    android:id="@+id/undying"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mahv"
