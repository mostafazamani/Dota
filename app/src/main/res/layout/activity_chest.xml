<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    tools:context="com.ba.dota.Store"
    android:padding="5dp">


    <TextView
        android:id="@+id/txt_dis"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="right"
        android:padding="5dp"
        android:text="@string/chest"
        android:textSize="17sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:scrollbarStyle="insideOverlay"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_dis">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chest_1"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:background="@drawable/chest" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@+id/chest_1"
                android:gravity="center_horizontal"
                android:text="احتمال بالا"

                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chest_2"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_toRightOf="@+id/chest_1"
                android:background="@drawable/chest" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@+id/chest_2"
                android:layout_toRightOf="@+id/txt1"
                android:gravity="center_horizontal"
                android:text="احتمال بالا"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chest_3"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_toRightOf="@+id/chest_2"
                android:background="@drawable/chest" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@+id/chest_3"
                android:layout_toRightOf="@+id/chest_2"
                android:gravity="center_horizontal"
                android:text="احتمال متوسط"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chest_4"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_toRightOf="@+id/chest_3"
                android:background="@drawable/chest" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@+id/chest_4"
                android:layout_toRightOf="@+id/txt3"
                android:gravity="center_horizontal"
                android:text="احتمال کم"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chest_5"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_toRightOf="@+id/chest_4"
                android:background="@drawable/chest" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@+id/chest_5"
                android:layout_toRightOf="@+id/txt4"
                android:gravity="center_horizontal"
                android:text="احتمال خیلی کم"
                android:textStyle="bold" />
        </RelativeLayout>

    </HorizontalScrollView>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/chest_pay"
        android:layout_below="@+id/scrollView"
        android:gravity="center"
        android:text="پرداخـــت"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>