<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ancientwall"

    android:layout_below="@+id/topimage_herosbio"
    android:layout_above="@+id/bottonimage_heros"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/heronamerell"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="#77000002">

        <ImageView
            android:id="@+id/profile_hero"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rect"
            android:padding="2dp"
            android:src="@drawable/anti_mage" />

        <TextView
            android:id="@+id/bio_name"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/profile_hero"
            android:gravity="center_horizontal" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_bastan"
        android:layout_below="@id/heronamerell"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_mahv"

        >

        <TextView
            android:id="@+id/text_bio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000002"
            android:paddingRight="3dp"
            android:gravity="right"
            android:textSize="18sp"

            />
    </ScrollView>

    <Button
        android:id="@+id/btn_bastan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rect"
        android:text="بستن"

        android:textStyle="bold" />


</RelativeLayout>