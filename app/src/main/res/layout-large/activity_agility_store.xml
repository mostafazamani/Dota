<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_storeagility"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/wallagility"
    tools:context="com.ba.dota.AgilityStore">


    <Button
        android:id="@+id/btn_alist"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/store"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/list_shopa"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/agility_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/btn_alist"
        android:gravity="center"
        android:text="Agility"
        android:textSize="45sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_shopa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/agility_name"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none"></ListView>

    <ProgressBar
        android:id="@+id/progressBar_a"
        style="@style/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dotaloadblack" />


</RelativeLayout>
