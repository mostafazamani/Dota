<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/traderelat"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#695c6570">

                <TextView
                    android:id="@+id/train_trade_text"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:text="Trade Link :"
                    android:textColor="@color/white"
                    android:textSize="20sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/train_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/train_trade_text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/trade_dis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/train_line_1"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:text="@string/trade_dis"
                    android:textColor="@color/WhiteSmoke" />

                <ImageView
                    android:id="@+id/image_trade_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trade_dis"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/trade" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/image_trade_link"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/shape_mahv"
                    android:text="Open On Steam" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/inventoryrelat"
                android:layout_width="match_parent"
                android:layout_height="450dp"

                android:layout_below="@+id/traderelat"
                android:layout_marginTop="20dp"
                android:background="#695c6570">

                <TextView
                    android:id="@+id/train_inventory_text"
                    android:layout_width="130dp"
                    android:layout_height="30dp"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:text="Inventory :"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/inventory_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/train_inventory_text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/inventory_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inventory_line"
                    android:layout_marginTop="3dp"

                    android:padding="5dp"
                    android:text="@string/inventory_exp"

                    />

                <ImageView
                    android:id="@+id/inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inventory_text"
                    android:layout_margin="3dp"
                    android:src="@drawable/inventory" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/descriptionrelat"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_below="@+id/inventoryrelat"
                android:layout_marginTop="20dp"
                android:background="#695c6570">

                <TextView
                    android:id="@+id/train_description_text"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:text="Description :"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/train_description_text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_line"
                    android:layout_marginTop="3dp"

                    android:padding="5dp"
                    android:text="@string/desciption_exp"

                    />


            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>